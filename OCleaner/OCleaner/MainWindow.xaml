<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:controls="clr-namespace:WpfApp1.Controls"
        mc:Ignorable="d"
        Title="OCleaner" Height="500" Width="900">
    <Window.Resources>
        <controls:ProgressToWidthConverter x:Key="ProgressToWidthConverter" />
        <LinearGradientBrush x:Key="IndicatorBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#FF6DD5" Offset="0.0"/>
            <GradientStop Color="#4DA6FF" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <Button x:Name="ScanButton" Width="100" Height="30" Margin="0,0,8,0">Scan</Button>
            <Button x:Name="CleanButton" Width="100" Height="30" Margin="0,0,8,0" IsEnabled="False">Clean</Button>
            <Button x:Name="CancelButton" Width="100" Height="30" Margin="0,0,8,0" IsEnabled="False">Cancel</Button>
            <TextBlock VerticalAlignment="Center" Margin="16,0,0,0">Found:</TextBlock>
            <TextBlock x:Name="FoundCount" VerticalAlignment="Center" Margin="4,0,0,0" FontWeight="Bold">0</TextBlock>
            <TextBlock VerticalAlignment="Center" Margin="16,0,0,0">Size:</TextBlock>
            <TextBlock x:Name="FoundSize" VerticalAlignment="Center" Margin="4,0,0,0" FontWeight="Bold">0 B</TextBlock>
        </StackPanel>

        <ListView x:Name="FilesListView" Grid.Row="1">
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                        <Expander IsExpanded="True" Margin="0,2,0,2">
                                            <Expander.Header>
                                                <DockPanel>
                                                    <CheckBox DockPanel.Dock="Left" Margin="4,0,8,0" VerticalAlignment="Center"
                                                              Checked="GroupCheckBox_Checked" Unchecked="GroupCheckBox_Unchecked" />
                                                    <TextBlock FontWeight="Bold" FontSize="12" Text="{Binding Name}" Padding="4,8" />
                                                </DockPanel>
                                            </Expander.Header>
                                            <ItemsPresenter />
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListView.GroupStyle>

            <ListView.View>
                <GridView>
                    <!-- Selection checkbox column -->
                    <GridViewColumn Width="36">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Path" Width="520" DisplayMemberBinding="{Binding Path}" />
                    <GridViewColumn Header="Size" Width="120" DisplayMemberBinding="{Binding Size}" />
                    <GridViewColumn Header="Last Modified" Width="160" DisplayMemberBinding="{Binding LastWrite}" />

                    <!-- Hidden Category column: use a collapsed TextBlock in CellTemplate so the value exists for grouping but is not visible -->
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Category}" Visibility="Collapsed" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,8,0,0">
            <!-- Modern progress bar -->
            <Border x:Name="ProgressContainer" CornerRadius="10" Background="#FFF3F4F6" Height="20" Padding="2" SnapsToDevicePixels="True">
                <Grid ClipToBounds="True">
                    <Rectangle x:Name="Indicator" VerticalAlignment="Stretch" HorizontalAlignment="Left"
                               RadiusX="8" RadiusY="8" Fill="{StaticResource IndicatorBrush}">
                        <Rectangle.Width>
                            <MultiBinding Converter="{StaticResource ProgressToWidthConverter}">
                                <Binding Path="ProgressValue" RelativeSource="{RelativeSource AncestorType=Window}" />
                                <Binding ElementName="ProgressContainer" Path="ActualWidth" />
                            </MultiBinding>
                        </Rectangle.Width>
                    </Rectangle>

                    <Rectangle RadiusX="10" RadiusY="10" Fill="#40FFFFFF" IsHitTestVisible="False"/>
                </Grid>
            </Border>

            <StackPanel Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                <TextBlock x:Name="ProgressPercent" Width="80" FontWeight="SemiBold">0%</TextBlock>
                <TextBlock Text="•" Margin="6,0"/>
                <TextBlock x:Name="StatusText" VerticalAlignment="Center">Idle</TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
